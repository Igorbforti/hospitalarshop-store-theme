{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "props": {
      "blockClass": "footer-container"
    },
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#logo",
      "flex-layout.col#institutional",
      "flex-layout.col#doubt",
      "flex-layout.col#contact",
      "flex-layout.col#payment"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingBottom": 3
    }
  },
  "flex-layout.col#logo": {
    "children": ["image#footer-logo"]
  },
  "image#footer-logo": {
    "props": {
      "src": "assets/images/footer-logo.svg"
    }
  },

  "flex-layout.col#institutional": {
    "children": [
      "rich-text#institutional",
      "link#about-us",
      "link#brand",
      "link#seller"
    ]
  },
  "rich-text#institutional": {
    "props": {
      "text": "INSTITUCIONAL"
    }
  },
  "link#about-us": {
    "props": {
      "href": "/",
      "label": "Sobre Nós"
    }
  },
  "link#brand": {
    "props": {
      "href": "/",
      "label": "Nossas Marcas"
    }
  },
  "link#seller": {
    "props": {
      "href": "/",
      "label": "Seja Um Seller"
    }
  },

  "flex-layout.col#doubt": {
    "children": [
      "rich-text#doubt",
      "link#payment-deadline",
      "link#exchange",
      "link#privacy",
      "link#terms"
    ]
  },
  "rich-text#doubt": {
    "props": {
      "text": "DÚVIDAS"
    }
  },
  "link#payment-deadline": {
    "props": {
      "href": "/",
      "label": "Prazo e Formas de Pagamento"
    }
  },
  "link#exchange": {
    "props": {
      "href": "/",
      "label": "Política de Trocas"
    }
  },
  "link#privacy": {
    "props": {
      "href": "/",
      "label": "Política de Privaciade e Segurança"
    }
  },
  "link#terms": {
    "props": {
      "href": "/",
      "label": "Termos e Condições de Uso"
    }
  },

  "flex-layout.col#contact": {
    "children": [
      "rich-text#contact",
      "link#wpp",
      "link#contact-email",
      "link#commercial-email"
    ]
  },
  "rich-text#contact": {
    "props": {
      "text": "ATENDIMENTO"
    }
  },
  "link#wpp": {
    "props": {
      "href": "",
      "label": "Whatsapp | (42) 984340311"
    }
  },
  "link#contact-email": {
    "props": {
      "href": "",
      "label": "E-mail | contato@hospitalarshop.com.br"
    }
  },
  "link#commercial-email": {
    "props": {
      "href": "",
      "label": "E-mail | comercial@hospitalarshop.com.br"
    }
  },

  "flex-layout.col#payment": {
    "children": ["accepted-payment-methods"]
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["social-networks"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        }
      ]
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
